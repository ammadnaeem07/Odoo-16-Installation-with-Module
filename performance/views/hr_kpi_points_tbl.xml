<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kpi_points_tbl_form" model="ir.ui.view">
        <field name="name">kpi.points.tbl.form</field>
        <field name="model">hr.kpi.points.tbl</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="kpi_id" options="{'no_open' : True, 'no_create': True}"/>
                        <field name="pt_label_id"/>
                        <field name="pt_score"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kpi_points_tbl_tree" model="ir.ui.view">
        <field name="name">kpi.points.tbl.tree</field>
        <field name="model">hr.kpi.points.tbl</field>
        <field name="arch" type="xml">
            <tree>
                <field name="kpi_id"/>
                <field name="pt_label_id"/>
                <field name="pt_score"/>
            </tree>
        </field>
    </record>


</odoo>